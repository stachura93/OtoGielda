{% extends '::base.html.twig' %}

{% block body -%}

<div class="row">
  <div class="col-md-7">
    <h1>Auction list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Enabled</th>
                <th>Title</th>
                <th>Content</th>
                <th>Picturepath</th>
                <th>Startauction</th>
                <th>Endauction</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ entity.enabled }}</td>
                <td><a href={{path('auction_show', {'id': entity.id}) }} > {{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.picturePath }}</td>
                <td>{% if entity.startAuction %}{{ entity.startAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endAuction %}{{ entity.endAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="col-md-5">
 {{ include('AppBundle:Auction:search_auction_by_title.html.twig') }}
</div>
</div>


{% endblock %}
