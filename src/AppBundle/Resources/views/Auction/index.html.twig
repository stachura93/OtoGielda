{% extends '::base.html.twig' %}

{% block body -%}

   {{ include('AppBundle:Auction:search_auction_by_title.html.twig') }}
   </br>
   </br>
    <h3>Auction list</h3>
    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Picturepath</th>
                <th>Endauction</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href={{path('auction_show', {'id': entity.id}) }} > {{ entity.title }}</td>
                <td>{{ entity.productPrice }}</td>
                <td>{{ entity.picturePath }}</td>
                <td>{% if entity.endAuction %}{{ entity.endAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block javascripts %}
<script language="JavaScript" type="text/javascript">
    $('#myTable').DataTable({
        "iDisplayLength": 25
    });
</script>
{% endblock %}