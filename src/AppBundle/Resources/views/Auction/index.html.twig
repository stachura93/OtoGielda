{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Auction list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Enabled</th>
                <th>Title</th>
                <th>Content</th>
                <th>Picturepath</th>
                <th>Startauction</th>
                <th>Endauction</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('auction_show', { 'id': entity.id }) }}">{{ entity.enabled }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.picturePath }}</td>
                <td>{% if entity.startAuction %}{{ entity.startAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endAuction %}{{ entity.endAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('auction_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('auction_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('auction_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
