{% extends '::profileBase.html.twig' %}
{% block body -%}
    <h1>Your Auction list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Enabled</th>
                <th>Title</th>
                <th>Content</th>
                <th>Picturepath</th>
                <th>Startauction</th>
                <th>Endauction</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.enabled == 1%}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
                <td><a href={{path('auction_show', {'id': entity.id } ) }}>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.picturePath }}</td>
                <td>{% if entity.startAuction %}{{ entity.startAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endAuction %}{{ entity.endAuction|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}