{% extends '::profileBase.html.twig' %}

{% block body -%}
<h1>Message you send</h1>
<table class="table">
    <thead>
        <tr>
            <th>Auction</th>
            <th>Subject</th>
            <th>Postdate</th>
            <th>UserRecipient</th>
            <th> ShowMessage </th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path ('auction_show', {'id': entity.auction.id} ) }}">  {{ entity.auction.title }}</a></td>
            <td>{{ entity.subject }}</a></td>
            <td>{% if entity.postDate %}{{ entity.postDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{entity.userRecipient}}</td>
            <td><a href="{{path('message_show_all_sender', {'subject': entity.subject, 'userMessage': entity.userRecipient})}}" > Messages </a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}